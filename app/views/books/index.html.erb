<div class="container">
  <div class="row">
      <p id="notice"><%= flash[:notice] %></p>
      <!--error表示-->
      <%= render 'root/errors_message', hoge: @book %>

      <!--user_info & 投稿-->
      <%= render 'root/sidebar', user: current_user %>

      <%# 投稿された%>
      <div class="col-xs-9">
              <h2>Books</h2>
            <table class="table table-hover table-inverse">
                <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th>いいね</th>
                  <th>コメント</th>
                </tr>
                </thead>

                <tbody>
                  <% @books.each do |book| %>
                    <tr>
                      <td>
                        <%= link_to(book.user) do %>
                        <%= attachment_image_tag(book.user, :profile_image, :fill, 50,50, fallback: 'sample_img.gif', size:'50x50')%>
                        <% end %>
                      </td>
                      <td><%= link_to book.title, book_path(book.id) %></td>
                      <td><%= book.body %></td>

                      <!--いいね機能-->
                      <td>
                        <%= render 'like', book: book %>
                      </td>
                      <!--コメント機能-->
                      <td>コメント数: <%= book.book_comments.count %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
        </div>
    </div>
</div>